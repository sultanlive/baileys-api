{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["."],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "module": "ES2020",
      "target": "ES2020",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./",
      "outDir": "build"
    }
  }